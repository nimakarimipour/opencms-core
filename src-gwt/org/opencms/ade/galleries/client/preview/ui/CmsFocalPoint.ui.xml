<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 	
	xmlns:cms="urn:import:org.opencms.gwt.client.ui">
	
	<ui:style gss="true">
	
		@external propertiesTabActive; 
		@external imagepointdefault; 
		
		.imagepoint {
  			width: 21px;
  			height: 21px;
  		    background-image: url("data:image/svg+xml;base64,");
		    background-size: 21px 21px;
			z-index: 999999;
			display: none;   
			position: absolute;
			box-sizing: border-box;
			border-radius: 50%; 
			cursor: pointer; 
			opacity: 0.4;
			background-color: #b31b34;
		}
		
		.imagepoint.imagepointdefault {
			background-color: #356ee1;
		}
		
		.propertiesTabActive .imagepoint {
			display: inline-block;
		}


	</ui:style>
	<g:FlowPanel ui:field="m_content" addStyleNames="{style.imagepoint}">
	
	</g:FlowPanel>
	
</ui:UiBinder> 